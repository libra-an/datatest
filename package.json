{
  "name": "App-data-test",
  "version": "1.0.3",
  "main": "main.js",
  "author": "libra-an",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "electron-updater": "^6.7.3"
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0"
  },
  "build": {
    "appId": "com.checktaikhoan.app",
    "productName": "App",
    "publish": [
      {
        "provider": "github",
        "owner": "libra-an",
        "repo": "datatest"
      }
    ],
    "win": {
      "target": ["nsis"],
      "publish": ["github"]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "runAfterFinish": true
    }
  }
}